<%provide(:title,"標語登録")%>

<h1>標語登録</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@slogan) do |f| %>
    <%= render 'shared/error_messages'%>
    <div class="form-group">
      <div id='editor'>
        <textarea name="slogan[content]" id="n" class="form-control" rows="20" v-model='input' debounce='50'></textarea>
        <div class="di_inline_t preview">
          <div v-html='input | marked' style: :"width: 650px;"></div>
        </div>
      </div>
    </div>
    <%= f.submit %>
    <% end %>
  </div>
</div>

<script type="text/javascript">
 window.onload = function() {
 new Vue({
 el: '#editor',
 data: {
 input: '<%== j @slogan.content %>',
 },
 filters: {
 marked: marked,
 },
 });
 };
</script>
